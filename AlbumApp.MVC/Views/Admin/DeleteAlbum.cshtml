@model AlbumApp.MVC.Models.Admin.DeleteAlbumModel

<h2>Add Artist</h2>
<h3>WARNING: deleting an album deletes all songs included.</h3>
<form asp-controller="Admin" asp-action="DeleteAlbum" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <select asp-for="Id" asp-items="@(new SelectList(ViewBag.Albums, "Value", "Text"))" class="form-control">
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Delete Album</button>
</form>
