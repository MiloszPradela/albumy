@model AlbumApp.MVC.Models.Admin.DeleteArtistModel

<h2>Delete Artist</h2>
<h3>WARNING: deleting an artist deletes all his albums and songs included.</h3>
<form asp-controller="Admin" asp-action="DeleteArtist" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <select asp-for="Id" asp-items="@(new SelectList(ViewBag.Artists, "Value", "Text"))" class="form-control">
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Delete Artist</button>
</form>
