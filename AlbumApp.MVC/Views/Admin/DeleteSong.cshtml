@model AlbumApp.MVC.Models.Admin.DeleteSongModel

<h2>Delete Song</h2>
<h3>WARNING: deleting a song is permanent.</h3>
<form asp-controller="Admin" asp-action="DeleteSong" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <select asp-for="Id" asp-items="@(new SelectList(ViewBag.Songs, "Value", "Text"))" class="form-control">
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Delete Song</button>
</form>
